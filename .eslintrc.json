{
	"root": true,
	"extends": [
		"neon/common",
		"neon/node",
		"neon/typescript",
		"neon/prettier"
	],
	"parserOptions": {
		"project": [
			"./tsconfig.json",
			"./packages/*/tsconfig.json"
		]
	},
	"rules": {
		"@typescript-eslint/consistent-type-definitions": [
			"error",
			"interface"
		],
		"import/extensions": "off"
	},
	"ignorePatterns": [
		"**/dist/*"
	]
}